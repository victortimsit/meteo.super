@import '../tools/breakpoints.styl'

.header__content
    width 980px
    margin 0 auto

.header__logo
    width 143px
    height 30px
    margin-top 20px
    font-family 'Roboto', sans-serif
    font-weight bold

    float left
    @media screen and (max-width: $large-tablet)
        margin-left 20px
    @media screen and (max-width: $medium-tablet)
        opacity 0

.header__logoImg
    height 30px

.header__siteName
    color #FFFFFF
    display inline-block
    transform translateY(-60%)
    @media screen and (max-width: $large-tablet)
        opacity 0

.header__input
    width 460px
    height 30px
    position absolute

    left 50%

    padding-left 10px
    margin-top 20px
    
    border-radius 2px
    
    background-color #FFFFFF

    transform translateX(-50%)
    @media screen and (max-width: $medium-tablet)
        width 60%