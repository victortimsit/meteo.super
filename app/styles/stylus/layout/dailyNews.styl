@import '../tools/breakpoints.styl'

.dailyNews
    width 600px
    display inline-block
    padding-top 30px
    padding-left 20px
    padding-right 20px

    border-radius 2px

    background-color #FFFFFF

    font-family 'Roboto', sans-serif

    box-shadow 0 1px 2px 0 rgba(0,0,0,0.05), 0 1px 3px 0 rgba(0,0,0,0.02)
    @media screen and (max-width: $medium-tablet)
        width 100%
        float none
